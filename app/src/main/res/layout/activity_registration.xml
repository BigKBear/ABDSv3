<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

        <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.globaltelecomunicationinc.abdsv3.RegistrationActivity">

            <ImageView
                android:id="@+id/ivRegistrationIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/etRegistrationUsername"
                android:adjustViewBounds="true"
                android:maxHeight="30sp"
                android:maxWidth="40dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon" />

            <TextView
                android:id="@+id/tvRegistrationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/ivRegistrationIcon"
                android:layout_toRightOf="@+id/ivRegistrationIcon"
                android:text="ABDS Registration"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvRegistrationNotice"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/ivRegistrationIcon"
                android:autoText="false"
                android:background="@null"
                android:text="Display notices to users when needed"
                android:textColor="#ffffff" />

            <EditText
                android:id="@+id/etRegistrationUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/etRegistrationPassword"
                android:layout_alignStart="@+id/etRegistrationPassword"
                android:layout_below="@+id/tvRegistrationTitle"
                android:layout_marginTop="76dp"
                android:background="@null"
                android:ems="10"
                android:hint="Type your name ..."
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etRegistrationPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etRegistrationUsername"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:background="@null"
                android:ems="10"
                android:hint="Type your password..."
                android:inputType="textPassword"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnRegistrer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etRegistrationConfirmPassword"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="3dp"
                android:background="@null"
                android:text="Register"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/tvRegistrationConfirmPasswordLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/etRegistrationPassword"
                android:layout_alignLeft="@+id/etRegistrationConfirmPassword"
                android:layout_alignRight="@+id/etRegistrationPassword"
                android:layout_alignStart="@+id/etRegistrationConfirmPassword"
                android:layout_below="@+id/etRegistrationPassword"
                android:autoText="false"
                android:background="@null"
                android:text="Please confirm password"
                android:textColor="#dbff0000"
                android:textStyle="bold"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/etRegistrationConfirmPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etRegistrationPassword"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:background="#ffffff"
                android:ems="10"
                android:hint="Confirm Password..."
                android:inputType="textPassword"
                android:textSize="20sp"
                android:visibility="invisible" />

        </RelativeLayout>
    </ScrollView>